{
  "name": "train-board",
  "version": "1.0.0",
  "description": "Run your own train-station arrivals board for UK trains",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "format": "prettier --write src/**/*.js",
    "lint": "eslint --fix src "
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/rosswilson/train-board.git"
  },
  "keywords": [
    "trains",
    "uk",
    "network-rail",
    "passenger-information-system",
    "api"
  ],
  "author": "Ross Wilson <me@rosswilson.co.uk>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rosswilson/train-board/issues"
  },
  "homepage": "https://github.com/rosswilson/train-board#readme",
  "devDependencies": {
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "nock": "^13.0.0-beta.4",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format",
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "got": "^11.1.3"
  }
}
